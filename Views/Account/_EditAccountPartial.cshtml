@model User

<div class="modal fade" id="editUser">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Edit">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id"/>
                        <label for="">
                            Логин
                            <input asp-for="UserName" type="text" value="@Model.UserName">
                            <span asp-validation-for="UserName" />
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="">
                            Email
                            <input asp-for="Email" type="text" value="@Model.Email">
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="">
                            Номер телефона
                            <input asp-for="PhoneNumber" type="datetime" value="@Model.PhoneNumber">
                        </label>
                    </div>

                    <div class="form-group">
                        <p>Укажите тип пользователя:</p>
                        <div>
                            <input type="radio" asp-for="Role" id="applicant" value="applicant"
                                   checked>Соискатель<br />
                            <input type="radio" asp-for="Role" id="employer" value="employer">Работодатель<br />
                        </div>
                        <span asp-validation-for="Role"></span>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary" data-save="modal">Редактировать</button>
            </div>

        </div>
    </div>

</div>